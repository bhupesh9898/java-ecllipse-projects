<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<context-param>
		<param-name>serviceProvider</param-name>
		<param-value>com.zensar.service.ProductServiceImpl</param-value>
	</context-param>
	<context-param>
		<param-name>repositoryProvider</param-name>
		<param-value>com.zensar.repository.ProductRepositoryImpl</param-value>
	</context-param>
	<filter>
		<filter-name>LoginFilter</filter-name>
		<display-name>LoginFilter</display-name>
		<description></description>
		<filter-class>com.zensar.filters.LoginFilter</filter-class>
	</filter>
	<filter>
		<filter-name>LogoutFilter</filter-name>
		<display-name>LogoutFilter</display-name>
		<description></description>
		<filter-class>com.zensar.filters.LogoutFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/login</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>LogoutFilter</filter-name>
		<url-pattern>/logout</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>IndexServlet</servlet-name>
		<display-name>IndexServlet</display-name>
		<description></description>
		<servlet-class>com.zensar.controllers.IndexServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<display-name>LoginServlet</display-name>
		<description></description>
		<servlet-class>com.zensar.controllers.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RegisterServlet</servlet-name>
		<display-name>RegisterServlet</display-name>
		<description></description>
		<servlet-class>com.zensar.controllers.RegisterServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteProductServlet</servlet-name>
		<display-name>DeleteProductServlet</display-name>
		<description></description>
		<servlet-class>com.zensar.controllers.DeleteProductServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddProductServlet</servlet-name>
		<display-name>AddProductServlet</display-name>
		<description></description>
		<servlet-class>com.zensar.controllers.AddProductServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetParticularProductServlet</servlet-name>
		<display-name>GetParticularProductServlet</display-name>
		<description></description>
		<servlet-class>com.zensar.controllers.GetParticularProductServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>GetAllProductsServlet</servlet-name>
		<display-name>GetAllProductsServlet</display-name>
		<description></description>
		<servlet-class>com.zensar.controllers.GetAllProductsServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UpdateProductServlet</servlet-name>
		<display-name>UpdateProductServlet</display-name>
		<description></description>
		<servlet-class>com.zensar.controllers.UpdateProductServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<display-name>LogoutServlet</display-name>
		<description></description>
		<servlet-class>com.zensar.controllers.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RegisterServlet</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteProductServlet</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddProductServlet</servlet-name>
		<url-pattern>/add</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetParticularProductServlet</servlet-name>
		<url-pattern>/getproduct</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>GetAllProductsServlet</servlet-name>
		<url-pattern>/allproducts</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UpdateProductServlet</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
</web-app>
